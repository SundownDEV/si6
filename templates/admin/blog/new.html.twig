{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block main %}
    <h1>Ajouter un article</h1>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.summary) }}
        {{ form_row(form.content) }}
        {{ form_row(form.tags) }}
        {{ form_row(form.image) }}

        <button type="submit" class="btn btn-success">
            <i class="fa fa-save" aria-hidden="true"></i> Enregistrer
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'Créer et ajouter un nouveau', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_post_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Retour à la liste
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
