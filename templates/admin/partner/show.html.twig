{% extends '@admin/layout.html.twig' %}

{% block title %}Ajouter un partenaire{% endblock %}

{% block main %}
    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ partner.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ asset('uploads/') ~ partner.image }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ partner.link }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_partner_edit', {'id': partner.id}) }}" class="btn btn-primary">Modifier</a>

    <hr>

    {{ include('@admin/partner/_delete_form.html.twig') }}
{% endblock %}